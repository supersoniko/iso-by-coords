{
	"compilerOptions": {
		"target": "ES2016",
		"module": "commonjs",
		"outDir": "./lib",
		"rootDir": "./src",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"declaration": true,
		"resolveJsonModule": true
	},
	"include": ["./src/**/*"],
	"exclude": ["**/__tests__/*"]
}
